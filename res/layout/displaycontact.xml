<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/image" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:weightSum="1">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Name"
                      android:id="@+id/hname" android:layout_weight="0.22"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/vname"
                    />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:weightSum="1">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Relation"
                      android:id="@+id/hrelation" android:layout_weight="0.22"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/vrelation"
                    />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:weightSum="1">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Address"
                      android:id="@+id/haddress" android:layout_weight="0.22"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/vaddress"
                    />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:weightSum="1">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Phone Number"
                      android:id="@+id/hphone" android:layout_weight="0.22"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/vphone"
                    />
        </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:weightSum="1">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Email"
                  android:id="@+id/hemail" android:layout_weight="0.22"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/vemail"
                />
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/edit" android:layout_gravity="center_horizontal"/>

</LinearLayout>